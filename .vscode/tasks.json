{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                // "${workspaceFolder}/src/fmha/build",
                "${workspaceFolder}/src/fmha-pipeline/build",
                "-S",
                "${workspaceFolder}",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseTitle": true,
                "clear": false
            }
        },
        {
            "label": "CMake: build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                // "${workspaceFolder}/src/fmha/build",
                "${workspaceFolder}/src/fmha-pipeline/build",
                "--parallel", "4"  // This line sets the number of max jobs to 1
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "CMake build task"
        }
    ]
}